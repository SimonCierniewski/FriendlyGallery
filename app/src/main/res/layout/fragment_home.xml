<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.cierniewski.friendlygallery.HomeFragment"
    android:orientation="vertical">

    <com.facebook.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/home_get_facebook_structure_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_get_facebook_structure"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/home_download_photos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_download_photos"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/home_available_space_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_available_space"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>

</LinearLayout>
